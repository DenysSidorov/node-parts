extends layout

block content

  form(action="/login" method="post")
    h1 Please sign in

    input(type='hidden', name='_csrf', value=csrf)

    .form-group
      label(for="email") Email
      input.form-control(type="email" id="email" name="email" placeholder="my@mail.com" required autofocus)
    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" required)


    button.btn.btn-lg.btn-primary.btn-block(type="submit") Login
    br
    a.btn.btn-lg.btn-primary.btn-block(href="/login/vkontakte") Login via Vkontakte
    br
    a.btn.btn-lg.btn-primary.btn-block(href="/login/github") Login via Github
    br
    a.btn.btn-lg.btn-primary.btn-block(href="/register") Registration
